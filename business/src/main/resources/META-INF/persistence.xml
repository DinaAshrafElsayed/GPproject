        <jta-data-source>java:/jdbc/shareit/ds</jta-data-source>
        <class>eg.iti.shareit.model.entity.TActivityEntity</class>
        <class>eg.iti.shareit.model.entity.TAddressEntity</class>
        <class>eg.iti.shareit.model.entity.TCategoryEntity</class>
        <class>eg.iti.shareit.model.entity.TCityEntity</class>
        <class>eg.iti.shareit.model.entity.TCountryEntity</class>
        <class>eg.iti.shareit.model.entity.TGenderEntity</class>
        <class>eg.iti.shareit.model.entity.TItemEntity</class>
        <class>eg.iti.shareit.model.entity.TStateEntity</class>
        <class>eg.iti.shareit.model.entity.TUserEntity</class>

        <properties>
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>-->
            <!--<property name="javax.persistence.jdbc.user" value="shareit"/>-->
